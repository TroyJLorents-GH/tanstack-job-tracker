# Build stage
FROM node:18-alpine AS build
WORKDIR /app
COPY job-tracker/package*.json ./
RUN npm ci
COPY job-tracker/ ./
# Inject Vite env at build time
ARG VITE_PARSE_API_URL
ENV VITE_PARSE_API_URL=$VITE_PARSE_API_URL
RUN npm run build

# Serve via nginx with SPA fallback
FROM nginx:alpine
# Nginx listens on 8080 for Cloud Run
COPY job-tracker/nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 8080
CMD ["nginx","-g","daemon off;"]


