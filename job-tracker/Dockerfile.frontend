# job-tracker/Dockerfile.frontend

FROM nginx:alpine

# Nginx listens on 8080 for Cloud Run
COPY job-tracker/nginx.conf /etc/nginx/conf.d/default.conf

# Copy the *already built* Vite assets
# (cloudbuild uses repo-root context ".", so this path exists)
COPY job-tracker/dist /usr/share/nginx/html

EXPOSE 8080
CMD ["nginx","-g","daemon off;"]
